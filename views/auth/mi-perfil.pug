extends ../layout/admin

block styles 
    meta(name="csrf-token" content= csrfToken)

block contenido
    div(class="flex justify-center items-center shadow bg-white my-10 w-96 rounded-lg mx-auto")
        div(class="flex flex-col") 
            if(usuario.imagen)
                div(class="relative  group flex ")
                    img(src=`/uploads/${usuario.imagen}` id="foto-perfil" alt="Foto de perfil" class="w-60 h-60 rounded-full group-hover:opacity-75 transition-opacity duration-300")
                    div(class="absolute inset-0 flex items-center justify-center flex-col rounded-full w-60 h-60  bg-black bg-opacity-50  text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300")
                        p(class=" text-white") Cambiar foto de perfil
                        input(type="file" class=" text-sm" id="imagen-nueva")
                        
                 

            else
                div(class="relative  group flex ")
                    img( src="/img/usuario-de-perfil.png" id="foto-perfil" alt="Foto de perfil" class="w-60 h-60 rounded-full group-hover:opacity-75 transition-opacity duration-300")
                    div( class="absolute inset-0 flex items-center justify-center flex-col rounded-full w-60 h-60  bg-black bg-opacity-50  text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300")
                        p(class=" text-white") Cambiar foto de perfil
                        input(type="file" class=" text-sm" id="imagen-nueva")
                        
                   

                
        
        
            p(class="font-bold pt-3") Nombre: 
                span(class="font-normal")= usuario.nombre
            p(class="font-bold") Correo: 
                span(class="font-normal")= usuario.email   


block  scripts 
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src="/js/agregarImagenPerfil.js") 
                                                      