extends ../layout/index


block contenido
    div(class=" py-10") 
        h1(class=" text-4xl my-10 font-extrabold text-center") Bienes
            span(class=" font-normal") Raices
        h2(class="text-center text-2xl font-extrabold")=pagina
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class=" bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")=error.msg

        div(class=" mt-8 mx-auto max-w-md") 
            div(class=" bg-white py-8 px-4 shadow") 
                form(class="space-y-5" method="post" action="/auth/login") 
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label(class=" block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Email 
                        input( id="email" class=" w-full px-3 py-2 border border-gray-300 rounder-md placeholder-gray-400"
                         placeholder="Tu Email" type="email" name="email" value=usuario ? usuario.email : '')   
                    div
                        label(class=" block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Password 
                        input( id="password" class=" w-full px-3 py-2 border border-gray-300 rounder-md placeholder-gray-400"
                         placeholder="Tu Password" type="password" name="password")   
                    div(class="flex items-center justify-between")
                        a(href="/auth/registro" class="text-gray-500 text-xs hover:text-gray-700") Â¿Aun no tienes Cuenta? Crea Una 
                        a(href="/auth/olvide-password" class="text-gray-500 text-xs hover:text-gray-700") Olvide mi password  
                    input(type="submit" value="Inicia Sesion" 
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer ")     
       
